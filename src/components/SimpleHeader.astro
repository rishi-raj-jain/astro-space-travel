---
import { Image } from 'astro:assets'

interface Props {
    title?: string
}

const { title } = Astro.props
---

<header>
    <div class="flex">
        <a href="/" class="radius-round">
            <Image src="/logo.svg" width={48} height={48} alt="" />
            <span class="sr-only">Back to homepage</span>
        </a>
        <h1 class="fs-450 uppercase letter-spacing-1">{title}</h1>
    </div>
</header>

<style lang="scss">
    header {
        grid-column: main;
        padding-block-start: 4rem;
        padding-block-end: 6rem;
    }

    .flex {
        align-items: center;
        justify-content: space-between;
    }

    .fs-450 {
        font-size: 1.5rem;
    }
</style>
